{
  "name": "mimesis",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "concurrently -n daemon,ui -c blue,green \"pnpm serve\" \"pnpm dev\"",
    "dev": "pnpm --filter @mimesis/ui dev",
    "serve": "pnpm --filter @mimesis/daemon serve",
    "watch": "pnpm --filter @mimesis/daemon watch",
    "watch:recent": "pnpm --filter @mimesis/daemon watch:recent",
    "watch:active": "pnpm --filter @mimesis/daemon watch:active"
  },
  "engines": {
    "node": ">=20.19.0"
  },
  "packageManager": "pnpm@10.26.0",
  "pnpm": {
    "onlyBuiltDependencies": ["better-sqlite3", "esbuild", "node-pty"]
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  },
  "dependencies": {
    "fastq": "^1.20.1"
  }
}
